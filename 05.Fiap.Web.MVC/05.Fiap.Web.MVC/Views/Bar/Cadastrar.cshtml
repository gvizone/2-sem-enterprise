@model _05.Fiap.Web.MVC.Models.Bar

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

@if(TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor( bar => bar.Nome)
        @Html.TextBoxFor( bar => bar.Nome)
    </div>

    <div class="form-group">
        @Html.LabelFor( bar => bar.Descricao)
        @Html.TextAreaFor( bar => bar.Descricao)
    </div>
    <div class="form-group">
        @Html.CheckBoxFor( bar => bar.Proibido)
        @Html.LabelFor( bar => bar.Proibido)
    </div>
    <div class="form-group">
        @Html.LabelFor( bar => bar.Cidade)
        @Html.DropDownListFor( bar => bar.Cidade, ViewBag.listaCidades as SelectList)
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary"/>
}

